<% if logged_in? %>
    <div class="row">
      <aside class="col-md-4">
        <section class="user_info">
          <%= render 'shared/user_info' %>
        </section>
        <section class="micropost_form">
          <%= render 'shared/micropost_form' %>
        </section>
      </aside>
    </div>
<% else %>
<div class="center jumbotron">
  <h1>Welcome to Twipper!</h1>

  <h2>
    This is a Twitter clone more basic than a teenage Starbucks customer who prefers Uggs as her primary choice of footwear and North Face as her primary choice of outerwear.

  </h2>

  <%= link_to "Start twipping now!", signup_path, class: "btn btn-lg btn-success" %>


</div>
<style>
  img {
    display: block;
    margin: auto;
    width: 10%;
  }
</style>

<%= link_to image_tag("rails.png", alt: "Rails logo"),
            'http://rubyonrails.org/' %>

<style>
  .center {
    text-align: center;
  }
</style>

<div class="center">
  <h6>
    Built using Ruby on Rails! Click the logo to check it out!</h6>
</div>
<% end %>
